<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_small"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="@dimen/width_download_icon"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_default">

        <ImageView
            android:id="@+id/img_avar"
            android:layout_width="@dimen/app_img_size"
            android:layout_height="@dimen/app_img_size"
            android:cropToPadding="true"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/app_img_size"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:text="Game Sale"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_tiny" />


        <TextView
            android:id="@+id/tv_lastest_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_default"

            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/strike_through"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_super_tiny"></TextView>

    </LinearLayout>
</android.support.v7.widget.CardView>
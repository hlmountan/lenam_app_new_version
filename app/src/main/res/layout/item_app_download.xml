<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_small"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="@dimen/width_download_icon"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_avar"
            android:layout_width="@dimen/app_img_size"
            android:layout_height="@dimen/app_img_size"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/avartar"
            android:layout_marginTop="@dimen/margin_super_tiny"

            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/app_img_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_super_tiny"
            android:text="Game Sale"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_tiny"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/btn_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/installbutton"
            android:text="Download"
            android:textColor="@color/white_transfer"
            android:textSize="@dimen/text_size_tiny"
            android:textAllCaps="false"/>


    </LinearLayout>
</android.support.v7.widget.CardView>